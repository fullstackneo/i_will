<div class="px-4 sm:px-6 lg:px-8">
    <div class="sm:flex sm:items-center">
        <div class="sm:flex-auto">
            <h1 class="text-xl font-semibold text-gray-900">{{format_firstUpperCase current_page}}</h1>
        </div>

    </div>
    <div class="mt-8 bg-white shadow overflow-hidden sm:rounded-md">
        <ul role="list" class="divide-y divide-gray-200">
            {{#each projects}}
                <li>
                    <a href="/projects/{{id}}/tasks" class="block hover:bg-gray-50">
                        <div class="px-4 py-4 flex items-center sm:px-6">
                            <div class="min-w-0 flex-1 sm:flex sm:items-center sm:justify-between">
                                <div class="truncate">
                                    <div class="flex text-sm">
                                        <p class="font-medium text-indigo-600 truncate">{{title}}</p>
                                        {{!-- <p class="ml-1 flex-shrink-0 font-normal text-gray-500">in Engineering</p> --}}
                                    </div>
                                    <div class="mt-2 flex">
                                        <div class="flex items-center text-sm text-gray-500">
                                            <!-- Heroicon name: solid/calendar -->
                                            <svg class="flex-shrink-0 mr-1.5 h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                                <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd" />
                                            </svg>
                                            <p>
                                                Created on
                                                <time datetime="2020-01-07">{{format_date createdAt}}</time>
                                            </p>
                                        </div>
                                    </div>
                                </div>

                                <div class="mt-4 flex items-center flex-shrink-0 sm:mt-0 sm:ml-5">
                                    <div class="flex overflow-hidden -space-x-1">
                                        {{#each (limit_array team 5)}}
                                            <img class="inline-block h-6 w-6 rounded-full ring-2 ring-white" src="{{avatar}}" alt="{{avatar}}">
                                        {{/each}}
                                    </div>
                                    {{#if (isGt team.length 5)}}
                                        <span class="text-gray-400 text-sm ml-1">+{{math team.length '-' 5}}</span>
                                    {{/if}}
                                    {{!-- <span class="fa-solid fa-ellipsis ml-1"></span> --}}


                                </div>


                            </div>

                            <div class="ml-5 flex-shrink-0">
                                <!-- Heroicon name: solid/chevron-right -->
                                <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                    <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
                                </svg>
                            </div>
                        </div>
                    </a>
                </li>
            {{/each}}
        </ul>
    </div>
</div>
