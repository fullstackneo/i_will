<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="./css/index.css" />
        <title>Document</title>
    </head>

    <body>
        <!-- This example requires Tailwind CSS v2.0+ -->
        <!--
  This example requires updating your template:

  ```
  <html class="h-full">
  <body class="h-full">
  ```
-->
        <div>
            {{> menu}}
            <!-- dashboard -->
            <div class="md:pl-64 flex flex-col flex-1">
                <div class="sticky top-0 z-10 md:hidden pl-1 pt-1 sm:pl-3 sm:pt-3 bg-white">
                    <button type="button" onclick='toggleMobileMenu()' class="openBtn -ml-0.5 -mt-0.5 h-12 w-12 inline-flex items-center justify-center rounded-md text-gray-500 hover:text-gray-900 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-indigo-500">
                        <span class="sr-only">Open sidebar</span>
                        <!-- Heroicon name: outline/menu -->
                        <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" aria-hidden="true">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
                        </svg>
                    </button>
                </div>
                <main class="flex-1">
                    <div class="py-6">
                        <div class="max-w-7xl mx-auto px-4 sm:px-6 md:px-8">
                            <h1 class="text-2xl font-semibold text-gray-900">Dashboard</h1>
                        </div>
                        <div class="max-w-7xl mx-auto px-4 sm:px-6 md:px-8">
                            <!-- Replace with your content -->
                            <div class="py-4">
                                <div class="border-4 border-dashed border-gray-200 rounded-lg h-96"></div>
                            </div>
                            <!-- /End replace -->
                        </div>
                    </div>
                </main>
            </div>
        </div>

    </body>
    <script>
        const mobileBackdrop = document.querySelector('.mobile-backdrop');
        const mobileMenu = mobileBackdrop.querySelector('.mobileMenu');
        const deskMenu = document.querySelector('.deskMenu');

        const mobileNav = mobileMenu.querySelector('nav')
        function toggleMobileMenu() {
            mobileMenu.classList.toggle('!-translate-x-full')
            mobileMenu.previousElementSibling.classList.toggle('!opacity-0')
        }

        mobileNav.addEventListener('click', (e) => {
            if (e.target.tagName === 'A') {
                mobileNav.querySelectorAll('a').forEach(el => {
                    el.classList.remove('menu-item-active')
                })
                e.target.classList.add('menu-item-active')
            }

        })

        deskMenu.addEventListener('click', (e) => {
            if (e.target.tagName === 'A') {
                deskMenu.querySelectorAll('a').forEach(el => {
                    el.classList.remove('bigMenu-item-active')
                });
                e.target.classList.add('bigMenu-item-active')
            }
        })



    </script>
    <script src="https://kit.fontawesome.com/59586d731f.js"></script>
</html>
