<div class="bg-white">
    <div class="w-full">
        <div class="py-24">
            <h1 class="text-4xl font-extrabold tracking-tight text-gray-900">My Tasks</h1>
            <p class="mt-4 text-base text-gray-500">Thoughtfully designed objects for the workspace, home, and travel.</p>
        </div>

        <section id="filter" aria-labelledby="filter-heading" class="border-t border-gray-200 py-6">
            <h2 id="filter-heading" class="sr-only">Product filters</h2>

            <div class="flex items-center justify-between">
                <div class="flex items-baseline space-x-8">
                    {{#if lists.project}}
                        <div id="desktop-menu" class="relative z-10 inline-block text-left">
                            <div>
                                <button type="button" class="group inline-flex items-center justify-center text-sm font-medium text-gray-700 hover:text-gray-900" aria-expanded="false">
                                    <span>Project</span>

                                    <span class="ml-1.5 rounded py-0.5 px-1.5 bg-gray-200 text-xs font-semibold text-gray-700 tabular-nums">{{lists.project.length}}</span>
                                    <!-- Heroicon name: solid/chevron-down -->
                                    <svg class="flex-shrink-0 -mr-1 ml-1 h-5 w-5 text-gray-400 group-hover:text-gray-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                        <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
                                    </svg>
                                </button>
                            </div>

                            <!--
                  Entering: "transition ease-out duration-100"
                    From: "transform opacity-0 scale-95"
                    To: "transform opacity-100 scale-100"
                  Leaving: "transition ease-in duration-75"
                    From: "transform opacity-100 scale-100"
                    To: "transform opacity-0 scale-95"
                -->
                            <div class="hidden origin-top-left absolute left-0 mt-2 bg-white rounded-md shadow-2xl p-4 ring-1 ring-black ring-opacity-5 focus:outline-none">
                                <form id='project' class="space-y-3">
                                    {{#each lists.project}}
                                        <div class="flex items-center hover:bg-gray-200 p-1">
                                            <input id="project-{{@index}}" {{#if this.checked}}checked{{/if}} name="category[]" value="{{this.title}}" type="checkbox" class="h-4 w-4 border-gray-300 rounded text-indigo-600 focus:ring-indigo-500">
                                            <label for="project-{{@index}}" class="ml-3 pr-6 text-sm font-medium text-gray-900 whitespace-nowrap"> {{this.title}} </label>
                                        </div>
                                    {{/each}}
                                </form>
                            </div>
                        </div>
                    {{/if}}

                    {{#if lists.assignee}}
                        <div id="desktop-menu" class=" relative z-10 inline-block text-left">
                            <div>
                                <button type="button" class="group inline-flex items-center justify-center text-sm font-medium text-gray-700 hover:text-gray-900" aria-expanded="false">
                                    <span>Assignee</span>
                                    <!-- Heroicon name: solid/chevron-down -->
                                    <span class="ml-1.5 rounded py-0.5 px-1.5 bg-gray-200 text-xs font-semibold text-gray-700 tabular-nums">{{lists.assignee.length}}</span>
                                    <svg class="flex-shrink-0 -mr-1 ml-1 h-5 w-5 text-gray-400 group-hover:text-gray-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                        <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
                                    </svg>
                                </button>
                            </div>

                            <!--
                  Entering: "transition ease-out duration-100"
                    From: "transform opacity-0 scale-95"
                    To: "transform opacity-100 scale-100"
                  Leaving: "transition ease-in duration-75"
                    From: "transform opacity-100 scale-100"
                    To: "transform opacity-0 scale-95"
                -->
                            <div class="hidden origin-top-right absolute left-0 mt-2 bg-white rounded-md shadow-2xl p-4 ring-1 ring-black ring-opacity-5 focus:outline-none">
                                <form id="assignee" class="space-y-3">
                                    {{#each lists.assignee}}
                                        <div class="flex items-center hover:bg-gray-200 p-1">
                                            <input id="assignee-{{@index}}" {{#if this.checked}}checked{{/if}} name="brand[]" value="{{this.name}}" type="checkbox" class="h-4 w-4 border-gray-300 rounded text-indigo-600 focus:ring-indigo-500">
                                            <label for="assignee-{{@index}}" class="ml-3 pr-6 text-sm font-medium text-gray-900 whitespace-nowrap"> {{this.name}} </label>
                                        </div>
                                    {{/each}}
                                </form>
                            </div>
                        </div>
                    {{/if}}
                </div>
            </div>
        </section>
    </div>
</div>
